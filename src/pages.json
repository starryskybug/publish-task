{
    "easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},

	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index",
            "style": {
                "enablePullDownRefresh": true
            }
		},
        {
            "path": "pages/task-release/post"
        },
        {
            "path": "pages/task/index",
            "style": {
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/profile/index"
        },
        {
            "path": "pages/profile/wallet/index"
        },
        {
            "path": "pages/profile/wallet/withdraw"
        },
        {
            "path": "pages/profile/task/index",
            "style": {
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/profile/task/detail"
        },
        {
            "path": "pages/profile/task/release",
            "style": {
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/profile/task/sub-tasks",
            "style": {
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/profile/task/sub-task-detail"
        }
	],
    "globalStyle": {
        "navigationStyle": "custom"
    },
    "tabBar": {
        "color": "#AAAAAA",
        "selectedColor": "#006E6B",
        "iconWidth": "48px",
        "borderStyle": "white",
        "list": [
            {
                "text": "首页",
                "iconPath": "static/tabbar/home.png",
                "selectedIconPath": "static/tabbar/home-active.png",
                "pagePath": "pages/index"
            },
            {
                "text": "任务中心",
                "iconPath": "static/tabbar/task.png",
                "selectedIconPath": "static/tabbar/task-active.png",
                "pagePath": "pages/task/index"
            },
            {
                "text": "我的",
                "iconPath": "static/tabbar/profile.png",
                "selectedIconPath": "static/tabbar/profile-active.png",
                "pagePath": "pages/profile/index"
            }
        ]
    }
}
